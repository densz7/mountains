.header
	padding-top 30px
	position fixed
	width 100%
	height 88px
	background-color: rgba($white, .23)
	transition .4s ease
	z-index 10

	&__logo
		margin-left 20px

	&__menu
		margin-top 7px

	&__button
		margin-top -8px
		float right

	&--white
		background-color $white
		box-shadow 0 1px 2px rgba(#030303, .3)