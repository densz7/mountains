.header
	padding-top 30px
	position fixed
	width 100%
	min-height 88px
	background-color: rgba($white, .23)
	transition .4s ease
	z-index 10

	&__logo
		margin-left 20px

	&__menu
		margin-top 7px

	&__button
		margin-top -10px
		float right

	&--white
		background-color $white
		box-shadow 0 1px 2px rgba(#030303, .3)
	
	&__dropdown-menu-icon
		margin-left auto
		margin-right 20px
		margin-top 12px
	
	@media (max-width: $screen-xs-max)
		background-color: $white
		
		&__button
			margin-top -10px
	
	@media (min-width: $screen-sm-min) and (max-width: $screen-sm-max)
		text-align center
		&__button
			margin-top 20px
			margin-bottom 20px