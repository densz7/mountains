@keyframes pulse	
	50%
		transform scale(1.1)
	
	100%
		transform scale(1)

.header
	padding-top 30px
	position fixed
	width 100%
	height 88px
	background-color: rgba($white, .23)
	transition .4s ease
	z-index 10

	&__logo
		margin-left 20px

	&__menu
		margin-top 7px

	&__button
		margin-top -8px
		float right
		
		&--hover:hover
			color $white
			background-color $blue
			animation-name pulse
			animation-duration 1.4s
			animation-timing-function linear
			animation-iteration-count infinite
	
	&--white
		background-color $white