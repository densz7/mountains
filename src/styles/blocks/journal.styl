.journal
	padding-bottom 40px
	min-height 1065px
	background-color $white

	&__title
		margin-top 70px
		margin-bottom 70px
		padding-top 40px
		color $section-title-color
		font-size 35px
		font-weight 700
		text-transform uppercase
		background-image url(../../images/title-top.png)
		background-repeat no-repeat
		background-position center 0
	
	&--no-padding-right
		padding-right 0
	
	&--no-padding-left
		padding-left 0