.contacts
	padding-top 40px
	padding-bottom 50px
	max-width 515px
	padding-left 30px
	padding-right 30px
	border-radius 8px
	background url(../../images/contacts/contacts__bg.jpg)
	background-repeat no-repeat
	background-position center
	background-size cover
	box-shadow 5px 5px 51px 0 rgba(#000, .15)
	
	&__title
		font-size 36px
		color $blue
		font-weight 700
		text-transform uppercase
	
	&__text
		margin-bottom 30px
		font-size $text-font
		color #383e4a

	&__name
	&__phone
	&__email
	&__button
		margin-bottom 20px
		padding-left 16px
		display block
		width 100%
		height 58px
		line-height 58px
		font-size 18px
		border none
		border-radius 4px
		outline none
	
	@media (max-width: $screen-xs-max)
		&__title
			font-size 32px
		
		&__name
		&__phone
		&__email
		&__button
			font-size 15px
			line-height 50px